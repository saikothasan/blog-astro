---
import ThemeToggle from './ThemeToggle.astro';
import Search from './Search.astro';

const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: 'Categories', href: '/categories' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 border-b border-gray-200 dark:border-gray-800">
  <div class="max-w-4xl mx-auto">
    <div class="py-4 px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center justify-between">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold">Blog</a>
        </div>
        
        <div class="hidden md:flex items-center gap-6">
          {navigation.map((item) => (
            <a
              href={item.href}
              class="text-sm font-medium hover:text-gray-600 dark:hover:text-gray-300"
            >
              {item.name}
            </a>
          ))}
        </div>

        <div class="flex items-center gap-4">
          <Search />
          <ThemeToggle />
        </div>
      </nav>
    </div>
  </div>
</header>